<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 col-lg-2 sidebar">
      <ul class="nav nav-sidebar">
        <h4 class="header">#followings</h4>
        {{#each model.followings as |blog|}}
        <li>
          {{#link-to 'blogs.blog' blog }}
          {{ blog.name }} <span class="pull-right badge">{{ blog.unreaded }}</span>
          {{/link-to}}
        </li>
