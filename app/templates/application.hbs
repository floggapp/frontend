      <div class="row">
        <div class="col-lg-8 col-md-9 col-sm-12">
          {{outlet}}
        </div>
        <div class="col-lg-4 col-md-3 hidden-xs pull-right">
          <h4 class="header">#blogs to follow</h4>
          <table class="table people">
            {{#each model.blogs as |person|}}
            <tr>
              <td class="image" rowspan="2">
                <img src="{{ person.image }}" alt="">
              </td>
              <td class="name">{{ person.name }}</td>
            </tr>
            <tr>
              <td class="follow"><button class="btn btn-xs btn-success">follow</button> </td>
            </tr>
            {{/each}}
          </table>
        </div>
      </div>

